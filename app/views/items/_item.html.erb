<div class="card">
  <%= link_to image_tag(item.image, class: :card__img ), item_path(item.id), method: :get%>
  <div class="card__body">
    <%= link_to item.title, item_path(item.id), method: :get, class: :card__title%>
    <p class="card__summary">
      獲得金額 <%= item.get_price %>円
    </p>
    <%= link_to "by #{item.user.name}", item_path(item.id), class: :card__user %>
  </div>
</div>